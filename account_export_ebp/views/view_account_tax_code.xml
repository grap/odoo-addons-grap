<openerp><data>

    <record id="view_account_tax_code_search" model="ir.ui.view">
        <field name="model">account.tax.code</field>
        <field name="arch" type="xml">
            <search string="Search Tax Code">
               <filter string="Without suffix" 
                    name="no_suffix" 
                    domain="[('ebp_suffix', '=', False)]"
                    groups="account.group_account_manager"/>
                <filter string="With moves" 
                    name="with_moves" 
                    domain="[('move_line_qty', '!=', 0)]"
                    groups="account.group_account_manager"/>
            </search>
        </field>
    </record>

    <record id="view_account_tax_code_form" model="ir.ui.view">
        <field name="model">account.tax.code</field>
        <field name="inherit_id" ref="account.view_tax_code_form" />
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="ebp_suffix" groups="account.group_account_manager"/>
            </field>
        </field>
    </record>

    <record id="view_account_tax_code_tree" model="ir.ui.view">
        <field name="model">account.tax.code</field>
        <field name="arch" type="xml">
            <tree string="Tax Code" editable="bottom">
                <field name="name" readonly="True"/>
                <field name="code" readonly="True"/>
                <field name="ebp_suffix"/>
                <field name="move_line_qty" readonly="True"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="action_account_tax_code" model="ir.actions.act_window">
        <field name="name">Tax Code Suffix View</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.tax.code</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_account_tax_code_tree"/>
        <field name="context">{'search_default_with_moves': 1, 'search_default_no_suffix': 1}</field>
    </record>

    <menuitem id="menu_account_tax_code"
        name="Tax Code Suffixes"
        parent="menu_ebp"
        action="action_account_tax_code"
        sequence="2"/>

</data></openerp>
