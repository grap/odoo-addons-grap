            <field eval="[(6, 0, [ref('base.group_no_one')])]" name="groups_id"/>
        </record>

        <record model="ir.ui.menu" id="product.menu_product_pricelist_action">
            <field eval="[(6, 0, [ref('base.group_no_one')])]" name="groups_id"/>
