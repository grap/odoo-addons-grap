<openerp><data>

    <record id="view_product_template_form_product" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="standard_price" position="before">
                <field name="standard_price_method"/>
                <field name="manual_standard_price" attrs="{'invisible': [('standard_price_method', '!=', 'manual')]}"/>
            </field>

        </field>
    </record>

    <record id="view_product_template_form_stock_account" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock_account.view_template_property_form"/>
        <field name="arch" type="xml">
            <field name="standard_price" position="attributes">
                <attribute name="attrs">{'readonly': 1}</attribute>
            </field>
        </field>
    </record>

</data></openerp>
